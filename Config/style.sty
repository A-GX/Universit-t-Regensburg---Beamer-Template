% #===> CREATE UR-THEME COLOR
\newcommand{\themecolor}[1]{
	\ifstrequal{#1}{Red}{%
        \MainColor{ur-rot}
        \BlockMainColor{urBlock-rot-main}
        \BlockTitleWriteColor{white}
        \BlockTitleColor{urBlock-rot-title}
	}{\ifstrequal{#1}{Yellow}{
        \MainColor{ur-yellow}
        \BlockMainColor{urBlock-yellow-main}
        \BlockTitleWriteColor{white}
        \BlockTitleColor{urBlock-yellow-title}
        }{\ifstrequal{#1}{GreenBrown}{
            \MainColor{ur-greenBrown}
            \BlockMainColor{urBlock-greenBrown-main}
            \BlockTitleWriteColor{white}
            \BlockTitleColor{urBlock-greenBrown-title}
            }{\ifstrequal{#1}{DarkBlue}{
                \MainColor{ur-darkBlue}
                \BlockMainColor{urBlock-darkBlue-main}
                \BlockTitleWriteColor{white}
                \BlockTitleColor{urBlock-darkBlue-title}
                }{\ifstrequal{#1}{Orange}{
                    \MainColor{ur-orange}
                    \BlockMainColor{urBlock-orange-main}
                    \BlockTitleWriteColor{white}
                    \BlockTitleColor{urBlock-orange-title}
                    }{\ifstrequal{#1}{BlueGreen}{
                        \MainColor{ur-blueGreen}
                        \BlockMainColor{urBlock-blueGreen-main}
                        \BlockTitleWriteColor{white}
                        \BlockTitleColor{urBlock-blueGreen-title}
                        }{\ifstrequal{#1}{Green}{
                            \MainColor{ur-green}
                            \BlockMainColor{urBlock-green-main}
                            \BlockTitleWriteColor{white}
                            \BlockTitleColor{urBlock-green-title}
                            }{\ifstrequal{#1}{Blue}{
                                \MainColor{ur-blue}
                                \BlockMainColor{urBlock-blue-main}
                                \BlockTitleWriteColor{white}
                                \BlockTitleColor{urBlock-blue-title}
                                }{\ifstrequal{#1}{Test}{
                                    \MainColor{ur-test}
                                    \BlockMainColor{urBlock-test-main}
                                    \BlockTitleWriteColor{black}
                                    \BlockTitleColor{urBlock-test-title}
                                    }{% else: Black&White
                                        \MainColor{black}
                                        \BlockTitleColor{ur-grey}
                                        \BlockTitleWriteColor{ur-background-grey}
                                        \BlockMainColor{white}
                                    }
                                }
                            }
                        }
                    }
                }
            }
	}
    }
}
